  <copy file="${fonts}/TCFontOld.tcz" todir="${output}/classes_bb" />
  <copy todir="${output}/classes_bb/totalcross/res" verbose="true">
   <fileset dir="${src}/totalcross/res" includes="**/*.png"/>
